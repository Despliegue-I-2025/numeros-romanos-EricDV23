{
  "name": "roman-converter",
  "version": "1.0.0",
  "description": "API robusta para convertir números romanos ↔ arábigos. Express, Jest, Swagger y despliegue en Vercel.",
  "main": "server.js",
  "type": "commonjs",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "jest --coverage --runInBand"
  },
  "dependencies": {
    "express": "^4.18.2",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^4.6.3"
  },
  "devDependencies": {
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "supertest": "^6.3.4"
  },
  "jest": {
    "testEnvironment": "node",
    "collectCoverage": true,
    "collectCoverageFrom": [
      "converter.js",
      "errors/**/*.js",
      "server.js"
    ],
    "testMatch": [
      "**/test/**/*.test.js",
      "**/tests/**/*.test.js"
    ]
  }
}

{
  "openapi": "3.0.0",
  "info": {
    "title": "Roman Converter API",
    "version": "1.0.0",
    "description": "API REST que convierte números Romanos ↔ Arábigos. Manejo robusto de errores estilo RFC 7807."
  },
  "servers": [
    { "url": "/" }
  ],
  "paths": {
    "/api/v1/r2a": {
      "get": {
        "summary": "Convierte número romano a arábigo",
        "parameters": [
          {
            "name": "roman",
            "in": "query",
            "required": true,
            "schema": { "type": "string" }
          }
        ],
        "responses": {
          "200": {
            "description": "Conversión exitosa",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "arabic": { "type": "integer" }
                  },
                  "required": ["arabic"]
                }
              }
            }
          },
          "400": {
            "description": "Número romano inválido o parámetro faltante"
          },
          "422": {
            "description": "Número fuera de rango (no aplica en esta ruta, pero presente para compatibilidad general)"
          },
          "500": {
            "description": "Error interno del servidor"
          }
        }
      }
    },

    "/api/v1/a2r": {
      "get": {
        "summary": "Convierte número arábigo a romano",
        "parameters": [
          {
            "name": "arabic",
            "in": "query",
            "required": true,
            "schema": { "type": "integer" }
          }
        ],
        "responses": {
          "200": {
            "description": "Conversión exitosa",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "roman": { "type": "string" }
                  },
                  "required": ["roman"]
                }
              }
            }
          },
          "400": {
            "description": "Formato inválido / parámetro mal formado"
          },
          "422": {
            "description": "Número fuera de rango (1–3999)"
          },
          "500": {
            "description": "Error interno del servidor"
          }
        }
      }
    }
  }
}
